<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="4dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">


            <RelativeLayout
                android:id="@+id/re_1"

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_floor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/bg_comment_floor"
                    android:gravity="center_vertical"
                    android:paddingBottom="2dp"
                    android:text="1楼"
                    android:textColor="@color/tab_blue" />


                <TextView
                    android:id="@+id/tv_huitie_author_name"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_toEndOf="@+id/cig_huitie_author_icon"
                    android:layout_toRightOf="@+id/cig_huitie_author_icon"
                    android:gravity="center"
                    android:text="遗失的乐园"
                    android:textColor="@color/tab_blue"
                    android:textSize="15sp" />

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/cig_huitie_author_icon"
                    android:layout_width="36dp"
                    android:layout_height="36dp"


                    app:border_color="#F0F0F0"
                    app:border_width="2dp" />
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/re_2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/re_1"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_content_of_detial_forum_threads"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:background="@null"
                    android:longClickable="true"
                    android:text="        想不到楼主也是性情中人啊，楼主振作起来啊，天涯何处无芳草，何必单恋一枝花！！！！另外这首歌真是百听不厌~~~"
                    android:textColor="#000000"
                    android:textSize="15sp" />


            </LinearLayout>

            <RelativeLayout
                android:id="@+id/re_3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/re_2">

                <TextView
                    android:id="@+id/tv_time_of_detail_forum_threads"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:gravity="center"
                    android:text="回复于2015-05-13 09:50"
                    android:textColor="#b0bec5"
                    android:textSize="14sp" />


            </RelativeLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_below="@id/re_3"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:id="@+id/item_action_love"
                android:src="@drawable/ic_action_love"
                android:padding="2dp"
                />

            <TextView

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"

                android:padding="5dp"
                android:text="5赞"
                android:textColor="#888888" />

            <View
                android:layout_width="0.4dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="7dp"
                android:background="@color/tab_brown" />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:id="@+id/item_action_hate"
                android:src="@drawable/ic_action_hate"
                android:padding="2dp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="9踩"
                android:textColor="#888888" />
            <View
                android:layout_width="0.4dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="7dp"
                android:background="@color/tab_brown" />

            <TextView
                android:id="@+id/item_action_comment"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:drawableLeft="@drawable/ic_action_comment"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:padding="5dp"
                android:text="回复"
                android:textColor="#888888" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>